<style lang="less">
  @color1: #09bb07;
  @primary-color: #ff2a48;
  page {
    height: 100%;
  }
</style>

<script>
  import wepy from 'wepy'
  import 'wepy-async-function'

  export default class extends wepy.app {
    config = {
      pages: [
        'pages/index',
        'pages/search',
        'pages/detail',
        'pages/agent'
      ],
      window: {
        backgroundTextStyle: 'light',
        navigationBarBackgroundColor: '#fe2a38',
        navigationBarTitleText: '粉丝专享优惠券',
        navigationBarTextStyle: 'white'
      }
    }

    globalData = {
      userInfo: null,
      openid: null
    }

    constructor () {
      super()
      this.use('requestfix')
      this.use('promisify');
    }

    onLaunch () {
      const self = this
      wx.login({
        success: function(res) {
          if (res.code) {
            // 发起网络请求
            wepy.request({
              url: `https://api.weixin.qq.com/sns/jscode2session?appid=wxe8f036f43b0f951b&secret=e35dcd6ecf58d46ef5551e408d931a4e&js_code=${res.code}&grant_type=authorization_code`,
            }).then(res => {
              console.log('openid', res.data.openid)
              self.globalData.openid = res.data.openid
            })
          } else {
            console.log('获取用户登录态失败！' + res.errMsg)
          }
        }
      });
    }

    getUserInfo (cb) {
      const that = this
      if (this.globalData.userInfo) {
        return this.globalData.userInfo
      }
      wepy.getUserInfo({
        success (res) {
          that.globalData.userInfo = res.userInfo
          cb && cb(res.userInfo)
        }
      })
    }
  }
</script>
