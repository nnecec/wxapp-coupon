<template>
  <view class="home">
    <scroll-view scroll-y="true" style="height: 100%;" bindscrolltolower="fetchList">
      <view class="search-panel">
        <image src="../images/slogen.png" class="search-slogen"></image>
        <navigator class="search-link" url="./search"><icon type="search" class="search-icon" size="16"/><text class="text">搜索心仪商品</text></navigator>
      </view>
      <navigator url="./agent" class="agent-enter"><image src="../images/agent.png" class="image"></image>效果报表<text class="arrow-right"></text></navigator>
      <List :list.sync="productList"/>
    </scroll-view>

  </view>
</template>

<script>
  import wepy from 'wepy'

  import api from '../mixins/api'

  import SearchBar from '../components/search/SearchBar'
  import List from '../components/product/List'

  export default class Index extends wepy.page {
    config = {}

    components = {
      SearchBar: SearchBar,
      List: List
    }

    data = {
      productList: [],
      offset: 0,
      agentId: ''
    }

    computed = {}

    methods = {

    }

    events = {}

    async onLoad (option) {
      this.fetchList()

      wx.getUserInfo({
        success: function(res) {
          console.log('user info', res)
        }
      })

      if (option.agentId) {
        this.agentId = option.agentId
        wx.setStorage({
          key: 'agentId',
          data: option.agentId
        })
      }
    }

    onShareAppMessage () {
      let path = 'pages/index'
      if (this.agentId) {
        path += '?agentId=' + this.agentId
      }
      return {
        title: '粉丝专享优惠券',
        path: path,
        success: function(res) {
          // 分享成功
          console.log('分享成功', res)
        },
        fail: function(res) {
          // 分享失败
          console.log('分享失败', res)
        }
      }
    }

    onShareAppMessage () {
      return {
        title: '粉丝专享优惠券',
        path: 'pages/index',
        success: function(res) {
          // 分享成功
          console.log('分享成功', res)
        },
        fail: function(res) {
          // 分享失败
          console.log('分享失败', res)
        }
      }
    }

    async fetchList () {
      const data = JSON.stringify({
        "offset": this.offset,
        "pageSize": 10
      })

      const res = await api.fetchDetail({}, '/public/1.0/h5/weixin/getHomePage?data=' + encodeURI(data))
      console.log('首页list', res)
      const items = res.data.data.topicRes.data[0].items
      this.productList = [...this.productList, ...items]
      this.offset += 10
      this.$apply()
    }

  }
</script>
