<style type="less">

  @price: #fe2947;
  .product {
    border-bottom: 1rpx solid #e6e6e6;
    display: flex;
    padding: 20rpx;
    position: relative;
    &.hover {
      background-color: #f5f5f5;
    }
    .product-image {
      width: 280rpx;
      position: relative;
      .image {
        width: 280rpx;
        height: 280rpx;
      }
      .new,
      .popular {
        color: #fff;
        font-size: 20rpx;
        position: absolute;
        right: 10rpx;
        top: 0;
        padding: 4rpx;
        &::after {
          content: "";
          position: absolute;
          left: 0;
          top: 100%;
          display: inline-block;
          width: 0;
          height: 0;
          border-left: 24rpx solid transparent;
          border-right: 24rpx solid transparent;
          border-top: 4rpx solid #3cc3c1;
        }
      }
      .new {
        background-color: #3cc3c1;
      }
      .popular {
        background-color: #fe2947;
        &::after {
          border-top: 4rpx solid #fe2947;
        }
      }
    }

    .product-info {
      padding: 20rpx;
      position: relative;
      .title {
        font-size: 30rpx;
        word-wrap: break-word;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        color: #444;
      }

      .price-panel {
        margin: 0.3rem 0 0;
        .price-name {
          font-size: 26rpx;
          color: #999;
        }
        .price-tag {
          font-size: 26rpx;
          color: @price;
          font-weight: 700;
        }
        .price-now {
          font-size: 46rpx;
          color: @price;
        }
        .price-old {
          font-size: 24rpx;
          color: #999;
          text-decoration: line-through;
        }
      }

      .sold {
        font-size: 26rpx;
        color: #555;
        position: absolute;
        left: 20rpx;
        bottom: 10rpx
      }
    }

    .way{
      position: absolute;
      bottom: 20rpx;
      right: 20rpx;
      .text{
        font-size: 28rpx;
        color: #fff;
        background-color: #fe2947;
        border: 1rpx solid #ff4d73;
        border-radius: 4rpx;
        padding: 10rpx 20rpx;
      }
      .coupon{
        background-color: #fe2947;
        background-size: 100% 100%;
        padding: 8rpx 18rpx 12rpx;
        font-size: 24rpx;
        color: #fff;
        .yellow{
          color: #f3fb21;
        }
        .price{
          font-size: 34rpx;
          position: relative;
          top: 2rpx;
        }
      }
    }
  }
</style>
<template>
  <view class="product" hover-class="hover" @tap="viewDetail()">
    <view class="product-image">
      <image class="image" mode="aspectFill" src="{{product.picUrl}}"></image>
      <text class="new" wx:if="{{product.isNew}}">上新</text>
      <text class="popular" wx:if="{{product.isPopular}}">爆款</text>
    </view>
    <view class="product-info">

      <text class="title">{{product.title}}</text>
      <view class="price-panel">
        <text class="price-name" wx:if="{{product.isHasActivity}}">券后价:</text>
        <text class="price-name" wx:if="{{!product.isHasActivity}}">折后价:</text>
        <text class="price-tag">¥ </text>

        <text class="price-now">{{product.price}}</text>
        <text class="price-old">¥ {{product.originPrice}}</text>
      </view>
      <text class="sold">已购 {{product.saleCount}} 件</text>
    </view>

    <view class="way" wx:if="{{product.isShowCoupon}}">
      <view class="text" wx:if="{{!product.isHasActivity}}">{{product.source ==='TM'?'去天猫':'去淘宝'}}</view>
      <view class="coupon" wx:if="{{product.isHasActivity}}"><text class="yellow">¥</text><text class="yellow price">{{product.activityPrice}}</text>优惠券</view>
    </view>
  </view>
</template>
<script>
  import wepy from 'wepy'

  export default class Product extends wepy.component {
    props = {
      product: Object
    }

    components = {}

    methods = {
      viewDetail(id) {
        console.log('进入详情页')
        const self = this
        wx.navigateTo({
          url: '../pages/detail?id=' + self.product.id
        })
      }
    }

    onLoad () {
      console.info('Product 加载完成')
    }
  }
</script>
